{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "YouTube Video API",
    "description": "API for adding, retrieving, and deleting YouTube videos with caching using Redis and database storage."
  },
  "paths": {
    "/videos": {
      "get": {
        "summary": "List all videos",
        "description": "Retrieve all videos from cache and database, avoiding duplicates.",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "A list of videos",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "F82uzV4PffM"
                  },
                  "url": {
                    "type": "string",
                    "example": "https://www.youtube.com/watch?v=F82uzV4PffM"
                  },
                  "title": {
                    "type": "string",
                    "example": "Sample Video Title"
                  },
                  "thumbnail": {
                    "type": "string",
                    "example": "https://example.com/thumbnail.jpg"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "summary": "Add a new video",
        "description": "Add a new YouTube video. Checks cache and database for duplicates.",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "video",
            "description": "YouTube video URL to add",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "url": {
                  "type": "string",
                  "example": "https://www.youtube.com/watch?v=dQw4w9WgXcQ"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Video added successfully",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "F82uzV4PffM"
                },
                "url": {
                  "type": "string",
                  "example": "https://www.youtube.com/watch?v=F82uzV4PffM"
                },
                "title": {
                  "type": "string",
                  "example": "Sample Video Title"
                },
                "thumbnail": {
                  "type": "string",
                  "example": "https://example.com/thumbnail.jpg"
                }
              }
            }
          },
          "400": {
            "description": "Invalid YouTube URL or API response"
          },
          "409": {
            "description": "Video already exists in the database or cache"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/videos/{video_id}": {
      "delete": {
        "summary": "Delete a video",
        "description": "Deletes a video from the cache and database.",
        "parameters": [
          {
            "name": "video_id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The ID of the video to delete"
          }
        ],
        "responses": {
          "200": {
            "description": "Video deleted successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Video deleted successfully."
                }
              }
            }
          },
          "404": {
            "description": "Video not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
